<div class='mt-4'>
    <h2>Thêm khóa học</h2>
    <form method='post' action='/courses/save'>
        <div class='form-group'>
            <label for='name'>Tên khóa học</label>
            <input name='name' type='text' class='form-control' id='name' />
        </div>
        <div class='form-group'>
            <label for='description'>Mô tả khóa học</label>
            <input
                name='description'
                type='text'
                class='form-control'
                id='description'
            />
        </div>
        <div class='form-group'>
            <label for='image'>URL Hình ảnh</label>
            <input name='image' type='text' class='form-control' id='image' />
        </div>
        <div class='form-group'>
            <label for='videoId'>Video ID</label>
            <input name='videoId' type='text' class='form-control' id='videoId' />
        </div>
        <button type='submit' class='btn btn-primary'>Thêm khóa học</button>
    </form>
</div>