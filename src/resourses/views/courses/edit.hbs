<div class='mt-4'>
    <h2>Chỉnh sửa khóa học</h2>
    <form method='post' action='/courses/save'>
        <div class='form-group'>
            <label for='name'>Tên khóa học</label>
            <input
                name='name'
                value='{{course.name}}'
                type='text'
                class='form-control'
                id='name'
            />
        </div>
        <div class='form-group'>
            <label for='description'>Mô tả khóa học</label>
            <textarea
                class='form-control'
                name='description'
                id='description'
                cols='30'
                rows='10'
            >{{course.description}}</textarea>
        </div>
        <div class='form-group'>
            <label for='image'>URL Hình ảnh</label>
            <input
                name='image'
                value='{{course.image}}'
                type='text'
                class='form-control'
                id='image'
            />
        </div>
        <div class='form-group'>
            <label for='videoId'>Video ID</label>
            <input
                name='videoId'
                value='{{course.videoId}}'
                type='text'
                class='form-control'
                id='videoId'
            />
        </div>
        <button type='submit' class='btn btn-primary'>Thêm khóa học</button>
    </form>
</div>