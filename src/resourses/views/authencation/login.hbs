<div class='d-flex justify-content-center align-items-center h-100'>
    <form id='form-login' class='w-25' action='/login' method='post'>
        <div class='mb-3'>
            <label for='exampleInputEmail1' class='form-label'>UserName</label>
            <input class='form-control' name='userName' id='userName' />
        </div>
        <div class='mb-3'>
            <label for='exampleInputPassword1' class='form-label'>Password</label>
            <input type='password' class='form-control' name='passWord' id='passWord' />
        </div>
        <button id='login-submit' type='submit' class='btn btn-primary'>Login</button>
    </form>
</div>

<script>
    const formElement = document.querySelector('#form-login'); const submitBtn =
    document.querySelector('#login-submit'); submitBtn.onclick = () => { formElement.submit() }
</script>